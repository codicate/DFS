{
	// Set tab size to 2 spaces globally
	"editor.tabSize": 2,
	"editor.insertSpaces": true,

	// Enable format on save for Rust files
	"editor.formatOnSave": true,

	// Use default formatting for TOML files
	"[toml]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"github.copilot.enable": {
		"*": true,
		"plaintext": false,
		"markdown": false,
		"scminput": false,
		"go": false
	}
}
