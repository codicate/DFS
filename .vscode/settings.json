{
	// Set tab size to 2 spaces globally
	"editor.tabSize": 2,
	"editor.insertSpaces": true,

	// Use rustfmt for Rust files
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},

	// Enable format on save for Rust files
	"editor.formatOnSave": true,

	// Use default formatting for TOML files
	"[toml]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	}
}
